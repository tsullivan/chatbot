{
  "name": "chatbot",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "yarn run lint && yarn run jest",
    "dev": "DEBUG='chatbot:*' NODE_ENV=development nodemon -e js,ts,json index.js --web",
    "dev-slack": "DEBUG='chatbot:*' NODE_ENV=development nodemon -e js,ts,json index.js --slack --web=false",
    "jest": "NODE_ENV=test SESSION_SECRET=testsess APM_TOKEN=testtoke  SLACK_BOT_TOKEN=testtoke jest --ci --verbose '\\.test\\.[jt]s'",
    "lint": "eslint --ignore-pattern='*json' 'public/js/**' 'src/**' 'test/**' 'config/**'"
  },
  "husky": {
    "hooks": {
      "precommit": "yarn run lint",
      "prepush": "yarn run test"
    }
  },
  "author": "Tim Sullivan",
  "license": "ISC",
  "engines": {
    "node": ">=12.14 <13"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node"
  },
  "prettier": {
    "printWidth": 88,
    "singleQuote": true,
    "trailingComma": "es5",
    "parser": "typescript"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^1.7.0",
    "@typescript-eslint/parser": "^1.7.0",
    "eslint": "~5.10",
    "eslint-config-prettier": "^4.1.0",
    "eslint-plugin-node": "~8.0",
    "eslint-plugin-prettier": "~3.0",
    "husky": "^3.1.0",
    "jest": "~24.9.0",
    "nodemon": "~2.0.2",
    "prettier": "~1.19.1",
    "supertest": "~4.0.2",
    "ts-jest": "~24.2.0"
  },
  "dependencies": {
    "@hapi/boom": "^8.0.1",
    "@slack/client": "~5.0.2",
    "@types/cookie-parser": "~1.4",
    "@types/debug": "^4.1.4",
    "@types/express": "~4.17.2",
    "@types/express-session": "~1.15",
    "@types/hapi__boom": "^7.4.0",
    "@types/jest": "~24.0.24",
    "@types/lodash": "~4.14",
    "@types/node": "~12.12.21",
    "@types/supertest": "~2.0",
    "@types/yargs": "^13.0.3",
    "body-parser": "~1.19.0",
    "cookie-parser": "~1.4",
    "debug": "~4.1",
    "elastic-apm-node": "~3.3.0",
    "express": "~4.17.1",
    "express-session": "~1.17.0",
    "lodash": "~4.17",
